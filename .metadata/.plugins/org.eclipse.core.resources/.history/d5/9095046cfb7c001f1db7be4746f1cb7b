package com.example.project.Controller;

import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.project.DTO.RegisterDTO;
import com.example.project.Models.User;

@RestController
@RequestMapping("/api")
public class UserController {

	@PostMapping("/user/register")
	public User createUser(@RequestBody RegisterDTO req) {
		
		User createUser = new User();
		createUser.setEmail(req.getEmail());
		createUser.setPassword(req.getPassword());
		createUser.setFirstName(req.getFirstName());
		createUser.setLastName(req.getLastName());
		
		return createUser;
	}
	
}
